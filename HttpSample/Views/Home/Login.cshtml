
@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/css/style.css" rel="stylesheet" />
</head>
<body>
    <div>
        <ul>
            <li><a href="/Home/Index">Home</a></li>
            <li><a href="/Home/Login">Login</a></li>
            <li><a href="/Home/CheckboxesTest">Groups</a></li>
        </ul>
    </div>
    <div>
        <fieldset>
            <legend>Login</legend>
            <form action="/Home/Login" method="post">
                <div class="grid">
                    <div class="row">
                        <div class="col-1">Username:</div>
                        <div class="col-2"><input type="text" name="Username" value="@ViewData["UsernameValue"]" /></div>
                        <div class="col-3"><span class="error">@ViewData["Username"]</span></div>
                    </div>
                    <div class="row">
                        <div class="col-1">Password:</div>
                        <div class="col-2"><input type="password" name="Password" value="@ViewData["PasswordValue"]" /></div>
                        <div class="col-3"><span class="error">@ViewData["Password"]</span></div>
                    </div>
                    <div class="row">
                        <div class="col-3">
                            <span class="error">@ViewData["AuthenticationError"]</span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-3">
                            <input type="submit" value="Login" />
                        </div>
                    </div>
                </div>
            </form>
        </fieldset>
    </div>
</body>
</html>

